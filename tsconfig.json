{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "incremental": true,
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "build",
    "rootDir": "tests",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "pretty": true,
  },
  "include": ["tests/**/*.ts"]
}
